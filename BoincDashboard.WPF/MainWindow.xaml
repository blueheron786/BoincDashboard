<Window x:Class="BoincDashboard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BoincDashboard"
        mc:Ignorable="d"
        Title="BOINC Task Dashboard" 
        Height="700" 
        Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#2D2D30">

    <Window.Resources>
        <!-- Converters -->
        <local:LastContactConverter x:Key="LastContactConverter"/>
        
        <!-- Styles -->
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#F1F1F1"/>
            <Setter Property="Margin" Value="10,5"/>
        </Style>
        
        <Style x:Key="StatusTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="Margin" Value="10,2"/>
        </Style>

        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#0E639C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="3"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1177BB"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#0A4F7C"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ToggleButtonStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="3"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#66BB6A"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#388E3C"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Background" Value="#2E7D32"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="False">
                                <Setter Property="Background" Value="#757575"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- ComboBox Item Style - Temporarily Disabled
        <Style TargetType="ComboBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border Background="{TemplateBinding Background}"
                                BorderThickness="0"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Left"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter Property="Background" Value="#0E639C"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#1177BB"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2C5282"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        -->

        <!-- DataGrid Styles -->
        <Style x:Key="DataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="#3F3F46"/>
            <Setter Property="Foreground" Value="#F1F1F1"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#555555"/>
            <Setter Property="RowBackground" Value="#3F3F46"/>
            <Setter Property="AlternatingRowBackground" Value="#4A4A52"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style x:Key="DataGridHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="BorderThickness" Value="0,0,1,0"/>
            <Setter Property="BorderBrush" Value="#0E639C"/>
        </Style>

        <!-- DataGrid Row Style for Computer Status -->
        <Style x:Key="ComputerRowStyle" TargetType="DataGridRow">
            <Setter Property="Background" Value="#3F3F46"/>
            <Setter Property="Foreground" Value="#F1F1F1"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Status}" Value="Offline">
                    <Setter Property="Background" Value="#1E1E1E"/>
                    <Setter Property="Foreground" Value="#999999"/>
                    <Setter Property="Opacity" Value="0.7"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="Online">
                    <Setter Property="Background" Value="#3F3F46"/>
                    <Setter Property="Foreground" Value="#F1F1F1"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Progress Bar Style -->
        <Style x:Key="ProgressBarStyle" TargetType="ProgressBar">
            <Setter Property="Background" Value="#555555"/>
            <Setter Property="Foreground" Value="#4CAF50"/>
            <Setter Property="Height" Value="16"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="2"
                                BorderThickness="1"
                                BorderBrush="#777777">
                            <Grid>
                                <Rectangle Name="PART_Track" 
                                         Fill="{TemplateBinding Background}"/>
                                <Rectangle Name="PART_Indicator" 
                                         Fill="{TemplateBinding Foreground}"
                                         HorizontalAlignment="Left"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TabControl Style -->
        <Style x:Key="TabControlStyle" TargetType="TabControl">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <Style x:Key="TabItemStyle" TargetType="TabItem">
            <Setter Property="Background" Value="#3F3F46"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="0,0,2,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border Name="Border" 
                                Background="{TemplateBinding Background}"
                                BorderThickness="0"
                                CornerRadius="4,4,0,0"
                                Margin="{TemplateBinding Margin}">
                            <ContentPresenter Name="ContentSite"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Center"
                                            ContentSource="Header"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#007ACC"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#464647"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Dark Theme ComboBox Style -->
        <Style x:Key="DarkComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="BorderBrush" Value="#404040"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton Name="ToggleButton"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        Focusable="False"
                                        IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                        ClickMode="Press">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border Name="Border"
                                               Background="{TemplateBinding Background}"
                                               BorderBrush="{TemplateBinding BorderBrush}"
                                               BorderThickness="{TemplateBinding BorderThickness}"
                                               CornerRadius="3">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="20"/>
                                                </Grid.ColumnDefinitions>
                                                <Path Name="Arrow"
                                                     Grid.Column="1"
                                                     HorizontalAlignment="Center"
                                                     VerticalAlignment="Center"
                                                     Data="M 0 0 L 4 4 L 8 0 Z"
                                                     Fill="#CCCCCC"/>
                                            </Grid>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="#2D2D30"/>
                                                <Setter TargetName="Border" Property="BorderBrush" Value="#007ACC"/>
                                                <Setter TargetName="Arrow" Property="Fill" Value="#F1F1F1"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="#3F3F46"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            <ContentPresenter Name="ContentSite"
                                            IsHitTestVisible="False"
                                            Content="{TemplateBinding SelectionBoxItem}"
                                            ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                            ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                            Margin="{TemplateBinding Padding}"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Left"/>
                            <Popup Name="Popup"
                                  Placement="Bottom"
                                  IsOpen="{TemplateBinding IsDropDownOpen}"
                                  AllowsTransparency="True"
                                  Focusable="False"
                                  PopupAnimation="Slide">
                                <Grid Name="DropDown"
                                     SnapsToDevicePixels="True"
                                     MinWidth="{TemplateBinding ActualWidth}"
                                     MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <Border Name="DropDownBorder"
                                           Background="#2D2D30"
                                           BorderBrush="#404040"
                                           BorderThickness="1"
                                           CornerRadius="3"
                                           Margin="0,1,0,0">
                                        <ScrollViewer Margin="2" SnapsToDevicePixels="True">
                                            <StackPanel IsItemsHost="True" 
                                                       KeyboardNavigation.DirectionalNavigation="Contained"/>
                                        </ScrollViewer>
                                    </Border>
                                </Grid>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="#666666"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Dark Theme ComboBoxItem Style -->
        <Style x:Key="DarkComboBoxItemStyle" TargetType="ComboBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border Name="Border"
                               Background="{TemplateBinding Background}"
                               BorderThickness="0"
                               Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#007ACC"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#094771"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#252526" Padding="10">
            <StackPanel>
                <TextBlock Text="BOINC Multi-Host Dashboard" 
                          Style="{StaticResource HeaderTextStyle}"/>
                <StackPanel Orientation="Horizontal">
                    <TextBlock x:Name="TotalTasksLabel" 
                              Text="Total Tasks: 0" 
                              Style="{StaticResource StatusTextStyle}"/>
                    <TextBlock Text=" | " 
                              Style="{StaticResource StatusTextStyle}"/>
                    <TextBlock x:Name="ActiveHostsLabel" 
                              Text="Active Hosts: 0" 
                              Style="{StaticResource StatusTextStyle}"/>
                    <TextBlock Text=" | " 
                              Style="{StaticResource StatusTextStyle}"/>
                    <TextBlock x:Name="LastUpdatedLabel" 
                              Text="Last Updated: Never" 
                              Style="{StaticResource StatusTextStyle}"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Tab Control -->
        <TabControl Grid.Row="1" 
                   x:Name="MainTabControl"
                   Style="{StaticResource TabControlStyle}">
            
            <!-- Tasks Tab -->
            <TabItem Header="📋 Tasks" Style="{StaticResource TabItemStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Control Panel -->
                    <Border Grid.Row="0" Background="#2D2D30" Padding="10" BorderThickness="0,1" BorderBrush="#3F3F46">
                        <StackPanel Orientation="Horizontal">
                            <Button x:Name="RefreshButton" 
                                   Content="🔄 Refresh Now" 
                                   Style="{StaticResource ButtonStyle}"
                                   Click="RefreshButton_Click"/>
                            <Button x:Name="SettingsButton" 
                                   Content="⚙️ Host Settings" 
                                   Style="{StaticResource ButtonStyle}"
                                   Click="SettingsButton_Click"/>
                            <ToggleButton x:Name="AutoRefreshToggle" 
                                         Content="⏱️ Auto-Refresh (every 5s)"
                                         IsChecked="True"
                                         Style="{StaticResource ToggleButtonStyle}"
                                         Click="AutoRefreshToggle_Click"/>
                            <!-- Filters -->
                            <TextBlock Text="Host:" 
                                      VerticalAlignment="Center" 
                                      Foreground="#CCCCCC" 
                                      Margin="20,0,5,0"/>
                            <ComboBox x:Name="HostFilterComboBox"
                                     Width="100"
                                     Margin="5,0"
                                     Style="{StaticResource DarkComboBoxStyle}"
                                     ItemContainerStyle="{StaticResource DarkComboBoxItemStyle}"
                                     SelectionChanged="HostFilterComboBox_SelectionChanged">
                            </ComboBox>
                            <TextBlock Text="Status:" 
                                      VerticalAlignment="Center" 
                                      Foreground="#CCCCCC" 
                                      Margin="20,0,5,0"/>
                            <ComboBox x:Name="StatusFilterComboBox"
                                     Width="100"
                                     Margin="5,0"
                                     Style="{StaticResource DarkComboBoxStyle}"
                                     ItemContainerStyle="{StaticResource DarkComboBoxItemStyle}"
                                     SelectionChanged="StatusFilterComboBox_SelectionChanged">
                            </ComboBox>
                        </StackPanel>
                    </Border>

                    <!-- Tasks Data Grid -->
                    <Border Grid.Row="1" Background="#3F3F46" Margin="10" CornerRadius="4">
            <DataGrid x:Name="TasksDataGrid" 
                     Style="{StaticResource DataGridStyle}"
                     ColumnHeaderStyle="{StaticResource DataGridHeaderStyle}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Host" 
                                      Binding="{Binding HostName}" 
                                      Width="120"
                                      SortMemberPath="HostName"/>
                    <DataGridTextColumn Header="Project" 
                                      Binding="{Binding ProjectName}" 
                                      Width="180"
                                      SortMemberPath="ProjectName"/>
                    <DataGridTextColumn Header="Task Name" 
                                      Binding="{Binding TaskName}" 
                                      Width="200"
                                      SortMemberPath="TaskName"/>
                    <DataGridTextColumn Header="Status" 
                                      Binding="{Binding State}" 
                                      Width="100"
                                      SortMemberPath="State"/>
                    <!-- Progress Column with Custom Template and SortMemberPath -->
                    <DataGridTemplateColumn Header="Progress" Width="120" SortMemberPath="ProgressPercent">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Grid>
                                    <ProgressBar Value="{Binding ProgressPercent}" 
                                               Maximum="100"
                                               Style="{StaticResource ProgressBarStyle}"/>
                                    <TextBlock Text="{Binding ProgressPercent, StringFormat='{}{0:F1}%'}" 
                                             HorizontalAlignment="Center" 
                                             VerticalAlignment="Center"
                                             Foreground="White" 
                                             FontSize="12" 
                                             FontWeight="Bold"/>
                                </Grid>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="Elapsed" 
                                      Binding="{Binding ElapsedTimeFormatted}" 
                                      Width="95" 
                                      SortMemberPath="ElapsedTime"/>
                    <DataGridTextColumn Header="Remaining" 
                                      Binding="{Binding RemainingTimeFormatted}" 
                                      Width="95" 
                                      SortMemberPath="RemainingTime"/>
                    <DataGridTextColumn Header="Deadline" 
                                      Binding="{Binding Deadline, StringFormat='{}{0:MMM dd HH:mm}'}" 
                                      Width="100"
                                      SortMemberPath="Deadline"/>
                </DataGrid.Columns>
            </DataGrid>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Computers Tab -->
            <TabItem Header="💻 Computers" Style="{StaticResource TabItemStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Computers Control Panel -->
                    <Border Grid.Row="0" Background="#2D2D30" Padding="10" BorderThickness="0,1" BorderBrush="#3F3F46">
                        <StackPanel Orientation="Horizontal">
                            <Button x:Name="RefreshComputersButton" 
                                   Content="🔄 Refresh Computers" 
                                   Style="{StaticResource ButtonStyle}"
                                   Click="RefreshButton_Click"/>
                            <TextBlock x:Name="ComputerCountLabel" 
                                      Text="Total Computers: 0" 
                                      Style="{StaticResource StatusTextStyle}"
                                      Margin="20,0,0,0"
                                      VerticalAlignment="Center"/>
                            <!-- Online/Offline Status Summary -->
                            <Border Background="#4CAF50" 
                                   CornerRadius="3" 
                                   Padding="8,4" 
                                   Margin="15,0,5,0"
                                   VerticalAlignment="Center">
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse Width="8" Height="8" Fill="White" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                    <TextBlock x:Name="OnlineCountLabel" 
                                              Text="0 Online" 
                                              Foreground="White" 
                                              FontWeight="Bold"
                                              FontSize="12"/>
                                </StackPanel>
                            </Border>
                            <Border Background="#F44336" 
                                   CornerRadius="3" 
                                   Padding="8,4" 
                                   Margin="0,0,5,0"
                                   VerticalAlignment="Center">
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse Width="8" Height="8" Fill="White" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                    <TextBlock x:Name="OfflineCountLabel" 
                                              Text="0 Offline" 
                                              Foreground="White" 
                                              FontWeight="Bold"
                                              FontSize="12"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- Computers Data Grid -->
                    <Border Grid.Row="1" Background="#3F3F46" Margin="10" CornerRadius="4">
                        <DataGrid x:Name="ComputersDataGrid" 
                                 Style="{StaticResource DataGridStyle}"
                                 ColumnHeaderStyle="{StaticResource DataGridHeaderStyle}"
                                 RowStyle="{StaticResource ComputerRowStyle}">
                            <DataGrid.Columns>
                                <DataGridTemplateColumn Header="Computer Name" 
                                                      Width="200"
                                                      SortMemberPath="HostName">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                <TextBlock VerticalAlignment="Center" Margin="0,0,8,0">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Status}" Value="Online">
                                                                    <Setter Property="Text" Value="💻"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Status}" Value="Offline">
                                                                    <Setter Property="Text" Value="💻"/>
                                                                    <Setter Property="Opacity" Value="0.4"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                                <TextBlock Text="{Binding HostName}" 
                                                         VerticalAlignment="Center">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Status}" Value="Offline">
                                                                    <Setter Property="FontStyle" Value="Italic"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn Header="Status" 
                                                      Width="120"
                                                      SortMemberPath="Status">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Status}" 
                                                         VerticalAlignment="Center"
                                                         Margin="0,0,5,0"/>
                                                <Ellipse Width="8" Height="8" 
                                                        VerticalAlignment="Center">
                                                    <Ellipse.Style>
                                                        <Style TargetType="Ellipse">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Status}" Value="Online">
                                                                    <Setter Property="Fill" Value="#4CAF50"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Status}" Value="Offline">
                                                                    <Setter Property="Fill" Value="#F44336"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Ellipse.Style>
                                                </Ellipse>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Header="Active Tasks" 
                                                  Binding="{Binding ActiveTasks}" 
                                                  Width="120"
                                                  SortMemberPath="ActiveTasks"/>
                                <DataGridTextColumn Header="Total Tasks" 
                                                  Binding="{Binding TotalTasks}" 
                                                  Width="120"
                                                  SortMemberPath="TotalTasks"/>
                                <DataGridTextColumn Header="Platform" 
                                                  Binding="{Binding Platform}" 
                                                  Width="150"
                                                  SortMemberPath="Platform"/>
                                <DataGridTextColumn Header="BOINC Version" 
                                                  Binding="{Binding BoincVersion}" 
                                                  Width="130"
                                                  SortMemberPath="BoincVersion"/>
                                <DataGridTextColumn Header="Last Contact" 
                                                  Binding="{Binding LastContact, Converter={StaticResource LastContactConverter}}" 
                                                  Width="120"
                                                  SortMemberPath="LastContact"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#007ACC" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Orientation="Horizontal">
                    <TextBlock x:Name="ConnectionStatusLabel" 
                              Text="● Connected" 
                              Foreground="LightGreen" 
                              FontWeight="Bold" 
                              VerticalAlignment="Center"/>
                    <TextBlock x:Name="UnavailableHostsLabel" 
                              Text="" 
                              Foreground="#FFB3B3" 
                              Margin="20,0,0,0" 
                              VerticalAlignment="Center"/>
                </StackPanel>
                
                <ProgressBar x:Name="LoadingProgressBar" 
                           Grid.Column="1"
                           Width="200" 
                           Height="16"
                           IsIndeterminate="True"
                           Visibility="Collapsed"
                           Style="{StaticResource ProgressBarStyle}"/>
            </Grid>
        </Border>
    </Grid>
</Window>

