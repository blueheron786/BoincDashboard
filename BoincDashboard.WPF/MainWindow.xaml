<Window x:Class="BoincDashboard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="BOINC Task Dashboard" 
        Height="700" 
        Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#2D2D30">

    <Window.Resources>
        <!-- Styles -->
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#F1F1F1"/>
            <Setter Property="Margin" Value="10,5"/>
        </Style>
        
        <Style x:Key="StatusTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="Margin" Value="10,2"/>
        </Style>

        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#0E639C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="3"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1177BB"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#0A4F7C"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ToggleButtonStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="3"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#66BB6A"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#388E3C"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Background" Value="#2E7D32"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="False">
                                <Setter Property="Background" Value="#757575"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- ComboBox Item Style - Temporarily Disabled
        <Style TargetType="ComboBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border Background="{TemplateBinding Background}"
                                BorderThickness="0"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Left"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter Property="Background" Value="#0E639C"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#1177BB"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2C5282"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        -->

        <!-- DataGrid Styles -->
        <Style x:Key="DataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="#3F3F46"/>
            <Setter Property="Foreground" Value="#F1F1F1"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#555555"/>
            <Setter Property="RowBackground" Value="#3F3F46"/>
            <Setter Property="AlternatingRowBackground" Value="#4A4A52"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <Style x:Key="DataGridHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="BorderThickness" Value="0,0,1,0"/>
            <Setter Property="BorderBrush" Value="#0E639C"/>
        </Style>

        <!-- Progress Bar Style -->
        <Style x:Key="ProgressBarStyle" TargetType="ProgressBar">
            <Setter Property="Background" Value="#555555"/>
            <Setter Property="Foreground" Value="#4CAF50"/>
            <Setter Property="Height" Value="16"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="2"
                                BorderThickness="1"
                                BorderBrush="#777777">
                            <Grid>
                                <Rectangle Name="PART_Track" 
                                         Fill="{TemplateBinding Background}"/>
                                <Rectangle Name="PART_Indicator" 
                                         Fill="{TemplateBinding Foreground}"
                                         HorizontalAlignment="Left"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#252526" Padding="10">
            <StackPanel>
                <TextBlock Text="BOINC Multi-Host Task Dashboard" 
                          Style="{StaticResource HeaderTextStyle}"/>
                <StackPanel Orientation="Horizontal">
                    <TextBlock x:Name="TotalTasksLabel" 
                              Text="Total Tasks: 0" 
                              Style="{StaticResource StatusTextStyle}"/>
                    <TextBlock Text=" | " 
                              Style="{StaticResource StatusTextStyle}"/>
                    <TextBlock x:Name="ActiveHostsLabel" 
                              Text="Active Hosts: 0" 
                              Style="{StaticResource StatusTextStyle}"/>
                    <TextBlock Text=" | " 
                              Style="{StaticResource StatusTextStyle}"/>
                    <TextBlock x:Name="LastUpdatedLabel" 
                              Text="Last Updated: Never" 
                              Style="{StaticResource StatusTextStyle}"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Control Panel -->
        <Border Grid.Row="1" Background="#2D2D30" Padding="10" BorderThickness="0,1" BorderBrush="#3F3F46">
            <StackPanel Orientation="Horizontal">
                <Button x:Name="RefreshButton" 
                       Content="🔄 Refresh Now" 
                       Style="{StaticResource ButtonStyle}"
                       Click="RefreshButton_Click"/>
                <Button x:Name="SettingsButton" 
                       Content="⚙️ Host Settings" 
                       Style="{StaticResource ButtonStyle}"
                       Click="SettingsButton_Click"/>
                <ToggleButton x:Name="AutoRefreshToggle" 
                             Content="⏱️ Auto-Refresh (every second)"
                             IsChecked="True"
                             Style="{StaticResource ToggleButtonStyle}"
                             Click="AutoRefreshToggle_Click"/>
                <!-- Filters temporarily disabled -->
                <TextBlock Text="Filters: All Hosts | All Status" 
                          VerticalAlignment="Center" 
                          Foreground="#CCCCCC" 
                          Margin="20,0,5,0"
                          FontStyle="Italic"/>
            </StackPanel>
        </Border>

        <!-- Main Data Grid -->
        <Border Grid.Row="2" Background="#3F3F46" Margin="10" CornerRadius="4">
            <DataGrid x:Name="TasksDataGrid" 
                     Style="{StaticResource DataGridStyle}"
                     ColumnHeaderStyle="{StaticResource DataGridHeaderStyle}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Host" 
                                      Binding="{Binding HostName}" 
                                      Width="120"
                                      SortMemberPath="HostName"/>
                    <DataGridTextColumn Header="Project" 
                                      Binding="{Binding ProjectName}" 
                                      Width="150"
                                      SortMemberPath="ProjectName"/>
                    <DataGridTextColumn Header="Task Name" 
                                      Binding="{Binding TaskName}" 
                                      Width="200"
                                      SortMemberPath="TaskName"/>
                    <DataGridTextColumn Header="Status" 
                                      Binding="{Binding State}" 
                                      Width="100"
                                      SortMemberPath="State"/>
                    <!-- Progress Column with Custom Template and SortMemberPath -->
                    <DataGridTemplateColumn Header="Progress" Width="120" SortMemberPath="ProgressPercent">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Grid>
                                    <ProgressBar Value="{Binding ProgressPercent}" 
                                               Maximum="100"
                                               Style="{StaticResource ProgressBarStyle}"/>
                                    <TextBlock Text="{Binding ProgressPercent, StringFormat='{}{0:F1}%'}" 
                                             HorizontalAlignment="Center" 
                                             VerticalAlignment="Center"
                                             Foreground="White" 
                                             FontSize="10" 
                                             FontWeight="Bold"/>
                                </Grid>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="Elapsed" 
                                      Binding="{Binding ElapsedTime, StringFormat='{}{0:hh\\:mm\\:ss}'}" 
                                      Width="80" 
                                      SortMemberPath="ElapsedTime"/>
                    <DataGridTextColumn Header="Remaining" 
                                      Binding="{Binding RemainingTime, StringFormat='{}{0:hh\\:mm\\:ss}'}" 
                                      Width="80" 
                                      SortMemberPath="RemainingTime"/>
                    <DataGridTextColumn Header="Deadline" 
                                      Binding="{Binding Deadline, StringFormat='{}{0:MMM dd HH:mm}'}" 
                                      Width="100"
                                      SortMemberPath="Deadline"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="3" Background="#007ACC" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Orientation="Horizontal">
                    <TextBlock x:Name="ConnectionStatusLabel" 
                              Text="● Connected" 
                              Foreground="LightGreen" 
                              FontWeight="Bold" 
                              VerticalAlignment="Center"/>
                    <TextBlock x:Name="ErrorMessageLabel" 
                              Text="" 
                              Foreground="#FFB3B3" 
                              Margin="20,0,0,0" 
                              VerticalAlignment="Center"/>
                </StackPanel>
                
                <ProgressBar x:Name="LoadingProgressBar" 
                           Grid.Column="1"
                           Width="200" 
                           Height="16"
                           IsIndeterminate="True"
                           Visibility="Collapsed"
                           Style="{StaticResource ProgressBarStyle}"/>
            </Grid>
        </Border>
    </Grid>
</Window>

